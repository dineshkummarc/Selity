use strict;
use warnings;

use FindBin;
use lib "$FindBin::Bin/..";
use lib "$FindBin::Bin/../PerlLib";

use Selity::Debug;
use Selity::Boot;
use Selity::Execute;
use Selity::Mail;
use Selity::Servers;
use Selity::Addons;
use Data::Dumper;

newDebug('selity-del-tmp.log');

sub logs_start_up {

	umask(027);
	Selity::Boot->new()->init({nolock => 'yes'});

	0;
}

sub del_tmp{

	my $rs = 0;

	my @servers	= Selity::Servers->new()->get();
	unless(scalar @servers){
		error("Can not get servers list");
		return 1;
	}

	for(@servers){
		s/\.pm//;
		next if $_ eq 'noserver';
		my $file	= "Servers/$_.pm";
		my $class	= "Servers::$_";
		require $file;
		my $instance	= $class->factory();
		if($instance->can('del_tmp')){
			$rs |= $instance->del_tmp();
		}
	}

	my @addons	= Selity::Addons->new()->get();
	unless(scalar @addons){
		error("Can not get addons list");
		return 1;
	}

	for(@addons){
		s/\.pm//;
		next if $_ eq 'noserver';
		my $file	= "Addons/$_.pm";
		my $class	= "Addons::$_";
		require $file;
		my $instance	= $class->factory();
		if($instance->can('del_tmp')){
			$rs |= $instance->del_tmp();
		}
	}

	$rs;
}

my $rs = 0;

exit 1 if logs_start_up();

$rs |= del_tmp();

exit $rs;


use strict;
use warnings;

use FindBin;
use lib "$FindBin::Bin/..";
use lib "$FindBin::Bin/../PerlLib";

use iMSCP::Debug;
use iMSCP::Boot;
use iMSCP::Execute;
use iMSCP::Mail;
use Servers::httpd;
use Data::Dumper;

newDebug('imscp-del-logs.log');

sub logs_start_up {

	umask(027);
	iMSCP::Boot->new()->init({nolock => 'yes'});

	0;
}

sub del_logs{

	my $rs = 0;
	my $httpd	= Servers::httpd->factory();
	$rs = $httpd->del_old_logs() if $httpd->can('del_old_logs');

	$rs;
}

my $rs = 0;

exit 1 if logs_start_up();

$rs |= del_logs();

exit $rs;


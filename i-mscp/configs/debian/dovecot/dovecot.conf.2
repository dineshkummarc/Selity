auth_mechanisms = plain login digest-md5
base_dir = /var/run/dovecot

dict {
	quotadict = mysql:/etc/dovecot/dovecot-dict-sql.conf
}

disable_plaintext_auth = no
mail_location = maildir:%h
mail_privileged_group = mail

namespace {
	inbox = yes
	location =
	prefix = INBOX.
	type = private
}

passdb {
	args = {DOVECOT_CONF_DIR}/dovecot-sql.conf
	driver = sql
}

userdb {
	driver = prefetch
}

userdb {
	args = {DOVECOT_CONF_DIR}/dovecot-sql.conf
	driver = sql
}

plugin {
	global_script_path = {DOVECOT_CONF_DIR}/sieve/dovecot.sieve
	quota = dict:user::proxy::quotadict
	quota_rule = *:bytes=1G
}

protocols = imap pop3

service auth {
	unix_listener /var/spool/postfix/private/auth {
		group = postfix
		mode = 0660
		user = postfix
	}
	unix_listener auth-master {
		group = {MAIL_GROUP}
		mode = 0660
		user = {MAIL_USER}
	}
	user = root
}

service dict {
	extra_groups = {MAIL_GROUP}
	unix_listener dict {
		group = {MAIL_GROUP}
		mode = 0660
	}
}

ssl = {DOVECOT_SSL}
{COMMENT_SSL}ssl_cert =<{GUI_CERT_DIR}/{HOST_NAME}.pem
{COMMENT_SSL}ssl_key =<{GUI_CERT_DIR}/{HOST_NAME}.pem

protocol imap {
	mail_plugins = quota imap_quota
}

protocol pop3 {
	mail_plugins = quota
	pop3_uidl_format = %u-%v
}

protocol lda {
	auth_socket_path = /var/run/dovecot/auth-master
	mail_plugins = quota sieve
	postmaster_address = postmaster@{HOST_NAME}
}
